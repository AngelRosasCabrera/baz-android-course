<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_details_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_details_bitso"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_10dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="@dimen/radio_10dp"
        app:cardElevation="@dimen/elevation_4dp"
        app:layout_constraintBottom_toTopOf="@id/gd_details_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/cl_details_bitso"
            layout="@layout/widget_card_view_details" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@id/tv_ask_bid_amount_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_details_bitso"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/style_tab_indicator"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorGravity="stretch"
        app:tabMode="fixed"
        app:tabSelectedTextColor="?attr/colorAccent"
        app:tabTextColor="?attr/colorOnPrimary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ask_bid_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:maxLines="@integer/line_1"
        android:text="@string/details_amount"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/color_text_secondary"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/pager"
        app:layout_constraintEnd_toStartOf="@id/tv_ask_bid_price_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ask_bid_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:maxLines="@integer/line_1"
        android:text="@string/details_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/color_text_secondary"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_ask_bid_amount_title"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ask_bid_amount_title" />

</androidx.constraintlayout.widget.ConstraintLayout>