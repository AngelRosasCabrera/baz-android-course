<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_details_center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/color_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/color_text_secondary"
        app:layout_constraintBottom_toBottomOf="@id/tv_details_currency_name"
        app:layout_constraintStart_toEndOf="@id/tv_details_currency_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_maximum_price_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center"
        android:text="@string/details_maximum_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/color_text_secondary"
        app:layout_constraintEnd_toEndOf="@id/gd_details_center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_details_currency_symbol" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_minimum_price_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center"
        android:text="@string/details_minimum_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/color_text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gd_details_center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_details_currency_symbol" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_maximum_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="?attr/colorOnPrimary"
        app:autoSizeMinTextSize="@dimen/text_size_12sp"
        android:maxLines="@integer/line_1"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@id/gd_details_center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_details_maximum_price_title" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_details_minimum_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:gravity="center"
        android:text=""
        android:maxLines="@integer/line_1"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="?attr/colorOnPrimary"
        app:autoSizeMinTextSize="@dimen/text_size_12sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toEndOf="@id/gd_details_center_vertical"
        app:layout_constraintTop_toTopOf="@id/tv_details_maximum_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_details_maximum_price"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>